<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/backg"
    android:alpha="0.9"
    tools:context="com.example.puff.finalproject.student.Qualification">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="#6E8D3E"
        android:elevation="10dp">
    </android.support.v7.widget.Toolbar>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Employment type"
    android:textSize="25dp"
    android:id="@+id/t1"
    android:textColor="#000"
    android:layout_marginRight="28dp"
    android:layout_alignTop="@+id/s"
    android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/s"
        android:backgroundTint="#fff"
        android:layout_below="@+id/toolbar"
        android:layout_toEndOf="@+id/t1"
        android:layout_marginStart="7dp"
        android:layout_marginTop="25dp">
    </Spinner>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/t2"
        android:text="Qualification"
        android:textSize="25dp"
        android:textColor="#000"
        android:layout_marginRight="70dp"
        android:layout_below="@+id/t1"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/s1"
        android:layout_alignTop="@+id/t2"
        android:layout_alignLeft="@+id/s2"
        android:backgroundTint="#fff"
        android:layout_alignStart="@+id/s2">

    </Spinner>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/s2"
        android:layout_alignTop="@+id/t3"
        android:layout_toRightOf="@+id/t2"
        android:backgroundTint="#fff"
        android:layout_toEndOf="@+id/t2">
    </Spinner>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/b1"
        android:text="Save"
        android:textSize="30dp"
        android:onClick="onClick"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/t4"
        android:text="Intake year"
        android:textSize="25dp"
        android:textColor="#000"
        android:layout_below="@+id/t3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/s3"
        android:layout_alignLeft="@+id/s2"
        android:layout_alignStart="@+id/s2"
        android:layout_alignBottom="@+id/t4"
        android:backgroundTint="#fff"
        android:layout_alignTop="@+id/t4">
    </Spinner>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/t5"
        android:text="Nearest Branch"
        android:textColor="#000"
        android:textSize="25dp"
        android:layout_below="@+id/t4"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/s4"
        android:layout_alignTop="@+id/t5"
        android:layout_toRightOf="@+id/t2"
        android:layout_toEndOf="@+id/t2"
        android:backgroundTint="#fff"
        android:layout_alignBottom="@+id/t5">

    </Spinner>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/t3"
        android:text="State"
        android:textSize="25dp"
        android:textColor="#000"
        android:layout_marginStart="7dp"
        android:layout_below="@+id/t2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp" />

</RelativeLayout>
