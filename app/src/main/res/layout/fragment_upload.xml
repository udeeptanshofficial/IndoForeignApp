<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/redbg"
    tools:context="com.example.puff.finalproject.student.Upload">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10th"
        android:textColor="#000"
        android:id="@+id/t1"
        android:textSize="30dp"/>

    <EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:hint="Enter file name"
    android:textColor="#000"
        android:id="@+id/e1"
        android:layout_below="@id/t1"
    android:textColorHint="#000" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Browse"
        android:id="@+id/b_10"
        android:layout_alignTop="@+id/e1"
        android:layout_toEndOf="@+id/e1"
        android:layout_marginStart="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12th"
        android:textColor="#000"
        android:id="@+id/t2"
        android:textSize="30dp"
        android:layout_below="@+id/b_10"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter file name"
        android:textColor="#000"
        android:id="@+id/e2"
        android:layout_below="@id/t2"
        android:textColorHint="#000" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Browse"
        android:id="@+id/b_12"
        android:layout_alignBottom="@+id/e2"
        android:layout_alignStart="@+id/b_10" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload"
        android:id="@+id/b_12upload"
        android:layout_alignBaseline="@+id/b_12"
        android:layout_alignBottom="@+id/b_12"
        android:layout_alignStart="@+id/b_10upload"
        android:visibility="invisible"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Graduation"
        android:textColor="#000"
        android:id="@+id/t3"
        android:textSize="30dp"
        android:layout_below="@id/e2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter file name"
        android:textColor="#000"
        android:id="@+id/e3"
        android:layout_below="@id/t3"
        android:textColorHint="#000" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload"
        android:id="@+id/b_gupload"
        android:layout_alignBaseline="@+id/b_g"
        android:layout_alignBottom="@+id/b_g"
        android:layout_alignParentEnd="true"
        android:visibility="invisible"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b_g"
        android:text="Browse"
        android:layout_alignBaseline="@+id/e3"
        android:layout_alignBottom="@+id/e3"
        android:layout_alignStart="@+id/b_12" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload"
        android:id="@+id/b_10upload"
        android:layout_alignBaseline="@+id/b_10"
        android:layout_alignBottom="@+id/b_10"
        android:layout_alignParentEnd="true"
        android:visibility="invisible"/>


</RelativeLayout>
