<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".agent.ViewDocument">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Name"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp" />
    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@id/editText"
        android:layout_alignRight="@id/editText"
        android:layout_alignEnd="@id/editText"
        android:text="go"
        android:id="@+id/search"
        android:onClick="check"
        android:clickable="false"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Document Search"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Marksheet 10th"
        android:id="@+id/txt_10th"
        android:layout_marginTop="45dp"
        android:layout_below="@id/editText"
        android:layout_toLeftOf="@id/textView"
        android:layout_toStartOf="@id/textView" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/c1"
        android:layout_alignBottom="@id/txt_10th"
        android:layout_centerHorizontal="true" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Download"
        android:id="@+id/b1"
        android:layout_alignTop="@id/txt_10th"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:visibility="invisible"
        android:onClick="downloadTen"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Marksheet 12th"
        android:id="@+id/txt_12"
        android:layout_marginTop="45dp"
        android:layout_below="@id/txt_10th"
        android:layout_toLeftOf="@id/textView"
        android:layout_alignRight="@id/txt_10th"
        android:layout_alignEnd="@id/txt_10th" />


    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/c2"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@id/c1"
        android:layout_alignStart="@id/c1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Download"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@id/b1"
        android:layout_alignStart="@id/b1"
        android:id="@+id/button"
        android:visibility="invisible"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Marksheet Graduation"
        android:id="@+id/txt_grad"
        android:layout_marginTop="45dp"
        android:layout_below="@id/button"
         />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/c3"
        android:layout_alignTop="@id/txt_grad"
        android:layout_alignLeft="@id/c2"
        android:layout_alignStart="@id/c2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Download"
        android:id="@+id/b3"
        android:layout_alignTop="@id/txt_grad"
        android:layout_alignLeft="@id/button"
        android:layout_alignStart="@id/button"
        android:visibility="invisible"/>

</RelativeLayout>
