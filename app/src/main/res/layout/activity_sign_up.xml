<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backg"
    android:alpha="0.8"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.puff.finalproject.student.SignUp">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="#6E8D3E"
        android:elevation="10dp">
    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/t1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="First Name"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="22dp"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentStart="true" />


    <TextView
        android:id="@+id/t5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gender"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="22dp"
        android:layout_above="@+id/r"
        android:layout_alignParentStart="true" />

    <RadioGroup
        android:id="@+id/r"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="22dp"
        android:layout_above="@+id/e5"
        android:layout_alignParentStart="true">

        <RadioButton
            android:id="@+id/r1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="18dp"
            android:buttonTint="#000"
            android:layout_marginRight="20dp"
            />

        <RadioButton
            android:id="@+id/r2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#000"
            android:buttonTint="#000"
            android:textSize="18dp"
            android:text="Female" />

    </RadioGroup>


    <TextView
        android:id="@+id/t4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Password"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="22dp"
        android:layout_above="@+id/e4"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/e3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F5F5F5"
        android:alpha="0.5"
        android:textColor="#000"
        android:inputType="textEmailAddress"
        android:layout_above="@+id/t4"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="18dp" />

    <EditText
        android:id="@+id/e2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:background="#F5F5F5"
        android:layout_marginBottom="18dp"
        android:alpha="0.5"
        android:layout_above="@+id/t3"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:onClick="onClick"
        android:text="Next"
        android:textColor="#000"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/t3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Email"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="22dp"
        android:layout_above="@+id/e3"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@id/t2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Last Name"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="22dp"
        android:layout_above="@+id/e2"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/e5"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="date"
        android:textSize="20dp"
        android:textColor="#000"
        android:clickable="true"
        android:onClick="setDate"
        android:background="#F5F5F5"
        android:alpha="0.5"
        android:layout_marginBottom="47dp"
        android:layout_above="@+id/btn"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/t6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DOB"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="22dp"
        android:layout_below="@+id/r"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:inputType="textPassword"
        android:ems="10"
        android:background="#F5F5F5"
        android:alpha="0.5"
        android:id="@+id/e4"
        android:layout_above="@+id/t5"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="18dp" />

    <EditText
        android:id="@+id/e1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F5F5F5"
        android:alpha="0.5"
        android:textColor="#000"
        android:layout_below="@+id/t1"
        android:layout_alignParentStart="true" />


</RelativeLayout>
