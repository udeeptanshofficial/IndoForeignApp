<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/backpic"
    android:layout_height="wrap_content"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.puff.finalproject.student.AgentDetails">
    <ImageView
        android:id="@+id/img_blank"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:background="#EF6C00"/>
    <ImageView
        android:id="@+id/img_agent"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/txt_agentname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_centerHorizontal="true"
        android:layout_below="@id/img_agent"
        android:layout_margin="20dp"/>
    <TextView
        android:id="@+id/txt_agentinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_agentname"
        android:layout_margin="10dp"/>
    <TextView
        android:id="@+id/txt_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_agentinfo"
        android:layout_margin="10dp"/>
    <ListView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_address">

    </ListView>


</RelativeLayout>
</ScrollView>
