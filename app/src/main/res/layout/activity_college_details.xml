<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@mipmap/backpic"
    android:layout_height="match_parent">
<ScrollView
    android:id="@+id/rel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.puff.finalproject.student.Login" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:id="@+id/txt_college"
        android:gravity="center"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_info"
        android:layout_below="@id/txt_college"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/img_college"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@id/txt_info"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_course"
        android:layout_below="@id/img_college"
        android:layout_marginTop="10dp"/></RelativeLayout></ScrollView>

<android.support.v7.widget.RecyclerView
        android:id="@+id/recycle_view"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@id/rel"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp">

    </android.support.v7.widget.RecyclerView>
    </RelativeLayout>
